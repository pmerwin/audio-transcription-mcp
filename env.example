# OpenAI API Key (required)
OPENAI_API_KEY=your_api_key_here

# Whisper model (default: whisper-1)
MODEL=whisper-1

# Chunk duration in seconds (default: 8)
CHUNK_SECONDS=8

# Input audio device name (macOS, default: BlackHole)
INPUT_DEVICE_NAME=BlackHole

# Output transcript file (default: meeting_transcript.md)
OUTFILE=meeting_transcript.md

# Audio settings
SAMPLE_RATE=16000
CHANNELS=1

