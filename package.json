{
  "name": "audio-transcription-mcp",
  "version": "0.6.1",
  "description": "MCP server for real-time audio transcription using OpenAI Whisper",
  "type": "module",
  "main": "dist/mcp-server.js",
  "bin": {
    "audio-transcription-mcp": "dist/main-cli.js"
  },
  "files": [
    "dist/",
    "setup-audio.sh",
    "README.md",
    "LICENSE",
    "package.json",
    "package-lock.json"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "mcp": "node dist/mcp-server.js",
    "setup": "node dist/setup-cli.js",
    "test-audio": "node dist/test-audio-cli.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prepublishOnly": "npm run build && npm test",
    "postinstall": "echo 'Audio Transcription MCP installed successfully'"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "audio",
    "transcription",
    "whisper",
    "openai",
    "real-time",
    "speech-to-text",
    "cursor",
    "claude"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pmerwin/audio-transcription-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/pmerwin/audio-transcription-mcp/issues"
  },
  "homepage": "https://github.com/pmerwin/audio-transcription-mcp#readme",
  "author": "Phil Merwin",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "dotenv": "^16.4.7",
    "openai": "^4.77.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.7.2"
  }
}
